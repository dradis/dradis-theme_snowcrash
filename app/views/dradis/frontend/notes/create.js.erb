<%# add the note content %>
$('#note-viewer').append($("<%= j render('dradis/themes/snowcrash/notes/note_content', note: @note) %>"));

<%# hide the no-notes placeholder %>
$('#notes .placeholder').hide()

<%# add the note link %>
$('#notes').append($("<%= j render 'dradis/themes/snowcrash/notes/note', note: @note %>"));
$('#notes a:last').click();

<%# re-enable editor button (see behaviours.js) %>
$('#notes_editor input[type=submit]').attr('disabled', false)