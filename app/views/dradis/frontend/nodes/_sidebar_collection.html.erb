<div class="header">
  <div class="header-inner">
    <div class="options">
      <div class="dropdown">
        <%= link_to raw('<i class="icon-plus"></i>'), '#', :class => 'dropdown-toggle', :data => {:name => name.downcase, :toggle => 'dropdown'}%>
        <ul class="dropdown-menu pull-right" role="menu">
          <li><%= link_to 'Empty (no template)', new_path,
                    :class => 'view-toggle editor-toggle',
                    :tabindex => '-1',
                    :data => {
                      :button => "Create #{name.singularize}",
                      :category_id => category_id,
                      :content => '',
                      :target => "##{name.downcase}_editor",
                      :title => "Add #{name.singularize}",
                      :url => new_path} %></li>
          <!-- <li class="divider"></li> -->
          <%# if NoteTemplate.all.any? %>
          <%# else %>
          <!-- <li class="disabled"><a href="#">(no templates defined)</a></li> -->
          <%# end -%>
        </ul>
      </div>
    </div>
    <h3><%= name %></h3>
  </div>
</div>
<div id="<%= name.downcase %>" class="note-list">
  <% if collection.any? %>
    <%= render collection%>
  <% end %>
  <div class="list-item">
    <div class="note placeholder <%= 'hide' if collection.any? %>">(nothing yet)</div>
  </div>
</div>
